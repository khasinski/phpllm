{
    "name": "phpllm/phpllm",
    "description": "One beautiful PHP API for OpenAI, Anthropic, Gemini, and more. Chat, Vision, Audio, Tools, Streaming.",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "llm",
        "ai",
        "openai",
        "anthropic",
        "claude",
        "gemini",
        "gpt",
        "chatgpt",
        "machine-learning",
        "php"
    ],
    "authors": [
        {
            "name": "Chris Hasi≈Ñski",
            "email": "krzysztof.hasinski@gmail.com"
        }
    ],
    "require": {
        "php": "^8.1",
        "guzzlehttp/guzzle": "^7.0",
        "league/mime-type-detection": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "phpstan/phpstan": "^1.10",
        "friendsofphp/php-cs-fixer": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "PHPLLM\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PHPLLM\\Tests\\": "tests/"
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "config": {
        "sort-packages": true
    }
}
